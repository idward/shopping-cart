{{#if productsInCart}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <ul class="list-group">
                {{#each productsInCart.items}}
                    <li class="list-group-item">
                        <span class="badge">{{this.itemQuantity}}</span>
                        <strong>{{this.item.title}}</strong>
                        <span class="label label-success">${{this.itemPrice}}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" type="button">
                                Action
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Reduce by 1</a></li>
                                <li><a href="#">Remove All</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3 text-right">
            <strong>Total: ${{productsInCart.totalPrice}}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3 text-right">
            <a href="/checkout" class="btn btn-success">Checkout</a>
        </div>
    </div>
    {{else}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}